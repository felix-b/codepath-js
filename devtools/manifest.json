{
  "name": "codepath dev tools extension",
  "version": "0.1.0",
  "description": "Records and visualizes code paths reported by codepath-js",
  "manifest_version": 2,
  "minimum_chrome_version": "10.0",
  "devtools_page": "devtools.html",
  "content_scripts": [
    {
      "matches": [
        "http://localhost:9090/*"
      ],
      "js": [
        "codepath.js",
        "contentScript.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "backgroundScript.js"
    ],
    "persistent": false
  },  
  "permissions": [
    "tabs",
    "notifications",
    "http://*/",
    "https://*/"    
  ],
  "web_accessible_resources" : [
    "/pageScript.js"
  ]
}
