{
  "name": "codepath dev tools extension",
  "version": "0.1.0",
  "description": "Records and visualizes code paths reported by codepath-js",
  "manifest_version": 2,
  "minimum_chrome_version": "10.0",
  "devtools_page": "devtools.html",
  "content_scripts": [
    {
      "matches": [
        "http://localhost:9090/*",
        "https://local.wix.com:3500/*"
      ],
      "js": [
        "codepath.js",
        "contentScript.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "codepath.js",
      "backgroundScript.js"
    ],
    "persistent": false
  },  
  "permissions": [
    "tabs",
    "notifications",
    "storage",
    "http://*/",
    "https://*/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources" : [
    "/codepath.js",
    "/pageScript.js"
  ]
}
